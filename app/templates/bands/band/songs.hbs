<div class="row">
  <div class="list-group songs">
    {{!-- <ul class="list-group songs"> --}}
      {{#if songCreationStarted}}
        <div class="list-group-item">
          {{!-- <li class="list-group-item"> --}}
          <form class="new-song-form" {{action "createSong" on="submit"}}>
            {{input type='text' class='new-song' placeholder="New song" value=title}}
            <button class="btn btn-primary btn-sm new-song-button"
            disabled={{isAddButtonDisabled}}>Add</button>
          {{!-- </li> --}}
          </form>
        </div>
      {{/if}}
      {{#each model.songs as |song|}}
        <li class="list-group-item">
          {{song.title}}
          {{star-rating item=song rating=song.rating on-click=(action "updateRating")}}
        </li>
        {{/each}}
      {{!-- </ul> --}}
      {{#unless canCreateSong}}
      <div class="list-group-item empty-list">
        <div class="empty-message">
          There are no songs yet. Why don't you<a href="#" {{action "enableSongCreation"}}>
            create one?</a>
        </div>
      </div>
      {{/unless}}
    </div>
  </div>
